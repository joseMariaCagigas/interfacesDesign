<Window x:Class="WpfApplication4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="206" Width="452">
    <StackPanel>
        <WrapPanel>
            <Image Height="119" HorizontalAlignment="Left" Margin="20,10,15,0" Name="Asterix" Source="/WpfApplication4;component/Images/asterix.jpg" MouseEnter="eventosPuntero" />
            <Image Height="119" HorizontalAlignment="Right" Margin="0,10,15,0" Name="IdeaFix"  Source="/WpfApplication4;component/Images/idefix.jpg" MouseEnter="eventosPuntero" />
            <Image Height="119" HorizontalAlignment="Left" Margin="0,10,15,0" Name="Obelix" Source="/WpfApplication4;component/Images/obelix.jpg" MouseEnter="eventosPuntero" ImageFailed="Obelix_ImageFailed" />
        </WrapPanel>
        <TextBox Height="23" Text="{Binding Name}" HorizontalAlignment="Left" Margin="10,10,0,0" Name="textBox1" VerticalAlignment="Top" Width="399" />
    </StackPanel>
</Window>
